<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:id="@+id/device_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/lyej_80"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/btn_select"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="@+id/btn_select"
        android:layout_marginBottom="57dp" />

    <Button
        android:id="@+id/btn_shoot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="拍照"
        app:layout_constraintRight_toLeftOf="@+id/btn_select"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="13dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_select"
        tools:layout_constraintBaseline_creator="1" />

    <Button
        android:id="@+id/btn_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="从相册读取"
        app:layout_constraintRight_toLeftOf="@+id/btn_origin"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/new_dev_name"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="20dp" />

    <TextView
        android:id="@+id/dev_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="4dp"
        app:layout_constraintRight_toRightOf="@+id/device_icon"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/device_icon" />

    <EditText
        android:id="@+id/new_dev_name"
        android:layout_width="139dp"
        android:layout_height="43dp"
        android:ems="10"
        android:hint="修改设备名称"
        android:inputType="textPersonName"
        android:singleLine="true"
        android:layout_marginEnd="108dp"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="106dp"
        app:layout_constraintRight_toRightOf="@+id/btn_origin"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_origin_name"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确定"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/btn_origin_name" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="设备名"
        android:layout_marginEnd="14dp"
        android:layout_marginStart="12dp"
        app:layout_constraintRight_toLeftOf="@+id/new_dev_name"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/btn_origin_name"
        android:layout_marginTop="7dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="7dp"
        app:layout_constraintLeft_toLeftOf="@+id/btn_shoot"
        app:layout_constraintTop_toTopOf="@+id/new_dev_name" />

    <Button
        android:id="@+id/btn_origin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="恢复初始图标"
        android:layout_marginEnd="31dp"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_select"
        tools:layout_constraintBaseline_creator="1" />

    <Button
        android:id="@+id/btn_origin_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="恢复初始名称"
        android:layout_marginEnd="16dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/btn_ok"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="12dp" />
</android.support.constraint.ConstraintLayout>
